@model Szakdoga.Models.TableVM

@{
    ViewData["Title"] = "Új asztal létrehozása";
}

<h1>Új asztal létrehozása</h1>

@*<h4>Asztal definiálás</h4>*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SeatsNumber" class="control-label"></label>
                <input input type="number"  min="0" oninput="validity.valid||(value='');" asp-for="SeatsNumber" class="form-control" minvalue="0"/>
                <span asp-validation-for="SeatsNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Létrehozás" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a listára</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
