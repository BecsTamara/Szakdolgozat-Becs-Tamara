@model IEnumerable<Szakdoga.Models.TableVM>

@{
    ViewData["Title"] = "Asztalok";
}

<h1>Asztalok</h1>

<p>
    <a asp-action="Create">Új felvétel</a>
</p>
<table id="myTable" class="table table-condensed">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SeatsNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SeatsNumber)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Módosítás</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Részletek</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Törlés</a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts{
    <script>
        $(document).ready( function () {
        $('#myTable').DataTable();
        } );
    </script>
}