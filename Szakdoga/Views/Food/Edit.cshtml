@model Szakdoga.Models.Food.FoodUpdateVM
@using Szakdoga.Configurations
@{
    ViewData["Title"] = "Módosítás";
}

<h1>Módosítás</h1>

<h4>Ételek</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FoodTypeId" class="control-label"></label>
                <select asp-for="FoodTypeId" asp-items="Model?.FoodTypes" class="form-select">
                    <option>Válassz Kategoriát</option>
                </select>
                <span asp-validation-for="FoodTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Adult" class="control-label"></label>
                <input asp-for="Adult" class="form-check-input"/>
                <span asp-validation-for="Adult" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Allergies" class="form-label"></label>
                <select asp-for="Allergies" id="demo" name="Allergies" multiple="multiple" class="form-control" asp-items="Model.AllAllergies.ToSelectList(0)">
                </select>
                <span asp-validation-for="Allergies" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enabled" class="control-label"></label>
                <input asp-for="Enabled" class="form-check-input"/>
                <span asp-validation-for="Enabled" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Mentés" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Vissza a listára</a>
</div>
@section Styles{
    <link type="text/css" href="~/lib/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
}
@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <script type="text/javascript" src="~/lib/bootstrap-select/js/bootstrap-select.min.js"></script>
    <script type="text/javascript">
        $(function() {
              $('#demo').selectpicker();
        });
    </script>
}
