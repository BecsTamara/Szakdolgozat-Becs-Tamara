@page
@model LoginModel


<div class="row" style="background-image: url('~/img/hatter.jpg');">
    <div class="col-md-4">
        <div class="login-box">
            <img src="~/img/images.png" class="avatar" />
            <section>
             
                <form id="account" method="post">
                    <br /><br /><br />
                    <h2>Bejelentkezés</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating">
                        <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.UserName" class="form-label">Felhasználónév</label>
                        <span asp-validation-for="Input.UserName" class="text-danger"></span>
                    </div>
                    <br />
                    <div class="form-floating">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label">Jelszó</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <br />
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <br />
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Bejelentkezés</button>
                    </div>
                    @*
                    <div>
                        <p>
                            <a id="forgot-password" asp-page="./ForgotPassword">Elfelejtett jelszó?</a>
                        </p>
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Új felhasználó regisztrálása</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Megerősítő e-mail újraküldése</a>
                        </p>
                    </div>
                    *@
                </form>
            </section>
        </div>
   </div>
</div>
@section Styles{
    <link type="text/css" href="~/css/login.css" rel="stylesheet" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
